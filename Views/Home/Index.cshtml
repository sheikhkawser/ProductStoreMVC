@{
    ViewData["Title"] = "Home Page";
}

<div class="text-left">
    <h5 class="display-4">Product List</h5>
</div>


<div id="table-container">
    <br />
    <div style="margin:0 auto;" class="table table-striped table-bordered dt-responsive" width="100%" cellspacing="0">
        <table id="demoGrid">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Rating</th>
                    <th>Price</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#demoGrid').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": "/Home/GetData",
                    "type": "GET",
                    "data": function (d) {
                        console.log(d);
                        return {
                            draw: d.draw,
                            start: d.start,
                            length: d.length,
                            sortColumn: d.columns?.[d.order?.[0]?.column]?.name ?? '',
                            sortColumnDirection: d.order?.[0]?.dir ?? '',
                            // sortColumn: d.columns[d.order[0].column].name,
                            // sortColumnDirection: d.order[0].dir,
                            searchValue: d.search.value
                        };
                    }
                },
                columns: [
                    { "data": "name", "name": "Name" },
                    { "data": "description", "name": "Description" },
                    { "data": "category", "name": "Category" },
                    { "data": "rating", "name": "Rating" },
                    { "data": "price", "name": "Price" },
                ],
                "order": [] // Disable initial sorting
            });
        });
    </script>
}